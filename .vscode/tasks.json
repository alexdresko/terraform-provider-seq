{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go: fmt",
      "type": "shell",
      "command": "gofmt",
      "args": ["-w", "."],
      "problemMatcher": []
    },
    {
      "label": "go: test",
      "type": "shell",
      "command": "go",
      "args": ["test", "./..."],
      "problemMatcher": []
    },
    {
      "label": "provider: build",
      "type": "shell",
      "command": "go",
      "args": ["build", "-o", "bin/terraform-provider-seq.exe", "."],
      "problemMatcher": []
    },
    {
      "label": "terraform: fmt",
      "type": "shell",
      "command": "terraform",
      "args": ["fmt", "-recursive"],
      "problemMatcher": []
    },
    {
      "label": "docs: generate",
      "type": "shell",
      "command": "./scripts/generate-docs.sh",
      "args": [],
      "problemMatcher": []
    },
    {
      "label": "release: tag",
      "type": "shell",
      "command": "./scripts/release-tag.sh",
      "args": ["${input:releaseVersion}"],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "releaseVersion",
      "type": "promptString",
      "description": "Version number (e.g., 0.1.0 or v0.1.0)"
    }
  ]
}
